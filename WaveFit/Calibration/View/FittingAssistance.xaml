                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="200" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                   Text="• Aumentar o ponto de joelho do WDRC."
                                   TextWrapping="Wrap"
                                   Foreground="White" />
                                        </Grid>

                                        <Grid Grid.Row="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="200" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                   Text="• Considere também verificar a limpeza do molde ou aumentar a ventilação."
                                   TextWrapping="Wrap"
                                   Foreground="White" />
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Expander>
                        </Grid>
