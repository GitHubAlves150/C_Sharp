                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                   Text="• Reduzir o ganho em baixas frequências."
                                   TextWrapping="Wrap"
                                   Foreground="White" />
                                        </Grid>

                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
