          Padding="4"
          UniformCornerRadius="14"
          Background="{StaticResource BackgroundColor}">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="10" />
                                <RowDefinition Height="auto" />
