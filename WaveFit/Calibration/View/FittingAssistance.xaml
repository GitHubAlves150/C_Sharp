                        <RowDefinition Height="10" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>

                    <md:Card Grid.Row="0"
                     Margin="5"
                     Padding="4"
                     UniformCornerRadius="14"
                     Background="{StaticResource BackgroundColor}">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="10" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>

                            <Expander  IsExpanded="False" Style="{StaticResource BaseStyle}">
                                <Expander.Header>
                                    <TextBlock Text="Som metálico"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               FontWeight="Bold"
                                               Foreground="White" />
                                </Expander.Header>

                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
               Text="O som do aparelho apresenta tinidos, lembrando sons de latas ou metais em atrito."
               TextWrapping="Wrap"
               Foreground="White" />

                                    <TextBlock Grid.Row="1"
               Text="Solução:"
               FontWeight="Bold"
               TextWrapping="Wrap"
               Foreground="White"
               Margin="0,10,0,0" />

                                    <TextBlock Grid.Row="2"
               Text="• Reduzir o ganho em altas frequências."
               TextWrapping="Wrap"
               Foreground="White" />

                                    <TextBlock Grid.Row="3"
               Text="• Aumentar a compressão em altas frequências."
               TextWrapping="Wrap"
               Foreground="White" />

                                    <TextBlock Grid.Row="4"
               Text="• Habilitar o controle de feedback caso existente."
               TextWrapping="Wrap"
               Foreground="White" />

                                    <TextBlock Grid.Row="5"
               Text="• Som metálico também pode indicar problema no receptor."
               TextWrapping="Wrap"
               Foreground="White" />
                                </Grid>
                            </Expander>
                        </Grid>
                    </md:Card>

                    <md:Card Grid.Row="2"
