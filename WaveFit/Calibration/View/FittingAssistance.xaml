                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                   Text="• Aumentar a taxa de compressão nas altas frequências."
                                   TextWrapping="Wrap"
                                   Foreground="White" />
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Expander>
                        </Grid>
