<UserControl x:Class="WaveFit2.Calibration.View.FittingAssistance"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:WaveFit2.Calibration.View"
             mc:Ignorable="d"
             d:DesignHeight="820"
             d:DesignWidth="350"
             Background="#f5f5f5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="10" />
            </Grid.RowDefinitions>

            <Button Command="hc:ControlCommands.Close" Grid.Row="0" HorizontalAlignment="left" Foreground="{DynamicResource BackgroundColor}" Style="{StaticResource ButtonIcon}" hc:IconElement.Geometry="{StaticResource DeleteFillCircleGeometry}" />

            <TextBlock Text="Fitting Assistance"
                       FontSize="24"
                       Grid.Row="1"
                       Margin="5"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />

            <hc:SearchBar Grid.Row="3"
               Width="325"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Style="{StaticResource SearchBarPlus}"
               hc:InfoElement.Placeholder="Pesquisar"
               TextAlignment="Center"
               ToolTip="Digite para pesquisar o tema desejado"
               hc:InfoElement.ShowClearButton="True"
               TextChanged="SearchBar_TextChanged" />
        </Grid>

        <Grid Grid.Row="1" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <hc:SideMenu BorderThickness="1" Width="250"
                         Background="{StaticResource BackgroundColor}">

                <hc:SideMenuItem Header="Som"
                                 Foreground="White"
                                 Background="Transparent"
                                 ToolTip="Início">
                    <hc:SideMenuItem.Icon>
                        <md:PackIcon Kind="VolumeMedium"
                                     Width="25"
                                     Height="25"
                                     Foreground="White" />
                    </hc:SideMenuItem.Icon>

                    <hc:SideMenuItem Header="Som abafado"
                                 Foreground="White"
                                 Background="Transparent"
                                 ToolTip="Início">
                        <hc:SideMenuItem.Icon>
                            <md:PackIcon Kind="VolumeMedium"
                                     Width="25"
                                     Height="25"
                                     Foreground="White" />
                        </hc:SideMenuItem.Icon>
                    </hc:SideMenuItem>

                    <hc:SideMenuItem Header="Som muito forte"
                                 Foreground="White"
                                 Background="Transparent"
                                 ToolTip="Início">
                        <hc:SideMenuItem.Icon>
                            <md:PackIcon Kind="VolumeMedium"
                                     Width="25"
                                     Height="25"
                                     Foreground="White" />
                        </hc:SideMenuItem.Icon>
                    </hc:SideMenuItem>

                    <hc:SideMenuItem Header="Som muito grave"
                                 Foreground="White"
                                 Background="Transparent"
                                 ToolTip="Início">
                        <hc:SideMenuItem.Icon>
                            <md:PackIcon Kind="VolumeMedium"
                                     Width="25"
                                     Height="25"
                                     Foreground="White" />
                        </hc:SideMenuItem.Icon>
                    </hc:SideMenuItem>

                    <hc:SideMenuItem Header="Som metálico"
                                 Foreground="White"
                                 Background="Transparent"
                                 ToolTip="Início">
                        <hc:SideMenuItem.Icon>
                            <md:PackIcon Kind="VolumeVibrate"
                                     Width="25"
                                     Height="25"
                                     Foreground="White" />
                        </hc:SideMenuItem.Icon>
                    </hc:SideMenuItem>
                </hc:SideMenuItem>

                <hc:SideMenuItem Header="Voz"
                                 Foreground="White"
                                 Background="Transparent"
                                 ToolTip="Início">
                    <hc:SideMenuItem.Icon>
                        <md:PackIcon Kind="Microphone"
                                     Width="25"
                                     Height="25"
                                     Foreground="White" />
                    </hc:SideMenuItem.Icon>

                    <hc:SideMenuItem Header="Som abafado"
                                 Foreground="White"
                                 Background="Transparent"
                                 ToolTip="Início">
                        <hc:SideMenuItem.Icon>
                            <md:PackIcon Kind="VolumeMedium"
                                     Width="25"
                                     Height="25"
                                     Foreground="White" />
                        </hc:SideMenuItem.Icon>
                    </hc:SideMenuItem>

                    <hc:SideMenuItem Header="Som muito forte"
                                 Foreground="White"
                                 Background="Transparent"
                                 ToolTip="Início">
                        <hc:SideMenuItem.Icon>
                            <md:PackIcon Kind="VolumeMedium"
                                     Width="25"
                                     Height="25"
                                     Foreground="White" />
                        </hc:SideMenuItem.Icon>
                    </hc:SideMenuItem>

                    <hc:SideMenuItem Header="Som muito grave"
                                 Foreground="White"
                                 Background="Transparent"
                                 ToolTip="Início">
                        <hc:SideMenuItem.Icon>
                            <md:PackIcon Kind="VolumeMedium"
                                     Width="25"
                                     Height="25"
                                     Foreground="White" />
                        </hc:SideMenuItem.Icon>
                    </hc:SideMenuItem>

                    <hc:SideMenuItem Header="Som metálico"
                                 Foreground="White"
                                 Background="Transparent"
                                 ToolTip="Início">
                        <hc:SideMenuItem.Icon>
                            <md:PackIcon Kind="VolumeVibrate"
                                     Width="25"
                                     Height="25"
                                     Foreground="White" />
                        </hc:SideMenuItem.Icon>
                    </hc:SideMenuItem>
                </hc:SideMenuItem>
            </hc:SideMenu>
        </Grid>

        <md:Card Grid.Row="1"
                 Margin="5"
                 UniformCornerRadius="14">
            <hc:ScrollViewer VerticalScrollBarVisibility="Auto"
                          Grid.Row="1"
                          Padding="5">

                <Grid Grid.Row="1" x:Name="ExpanderGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="auto" />
