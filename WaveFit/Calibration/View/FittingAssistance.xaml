                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="10" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="O som do aparelho é demasiadamente grave."
                           TextWrapping="Wrap"
                           Foreground="White" />

                                    <TextBlock Grid.Row="2"
                           Text="Solução:"
