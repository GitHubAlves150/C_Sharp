                    <md:Card Grid.Row="6"
                             Margin="5"
                             Padding="4"
                             UniformCornerRadius="14"
                             Background="{StaticResource BackgroundColor}">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="10" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>

                            <Expander  IsExpanded="False" Style="{StaticResource BaseStyle}">
